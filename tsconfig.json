{
	"compilerOptions": {
		"target": "es2020",
		"module": "es2020",
		"lib": ["es2021", "DOM", "DOM.Iterable"],
		"baseUrl": "./",
		"allowJs": true,
		"paths": {
			"api": ["src/api"],
			"api/*": ["src/api/*"],
			"assets/*": ["src/assets/*"],
			"components": ["src/components"],
			"components/*": ["src/components/*"],
			"context": ["src/context"],
			"context/*": ["src/context/*"],
			"images/*": ["src/images/*"],
			"pages/*": ["src/pages/*"],
			"router/*": ["src/router/*"],
			"src/*": ["src/*"],
			"types/*": ["src/types/*"],
			"utils": ["src/utils"],
			"utils/*": ["src/utils/*"]
		},
		"forceConsistentCasingInFileNames": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"strict": true, // Enable all strict type-checking options
		"typeRoots": ["src/index.d.ts"]
		// "target": "es5",
		// "lib": ["dom", "dom.iterable", "esnext"],
		// "allowJs": true,
		// "allowSyntheticDefaultImports": true,
		// "noFallthroughCasesInSwitch": true,
		// "module": "esnext",
		// "resolveJsonModule": true,
		// "isolatedModules": true,
		// "noEmit": true,
		// "noImplicitAny": true, // Raise an error on expressions and declarations with an implied 'any' type
		// "strictNullChecks": true, // Enable strict null checks
		// "strictFunctionTypes": true, // Ensure function parameter bivariance is checked
		// "strictPropertyInitialization": true, // Ensure class properties are correctly initialized
		// "noImplicitThis": true, // Raise an error when 'this' is implicitly any
		// "alwaysStrict": true, // Parse in strict mode and emit "use strict" for each source file
		// "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules
		// "skipLibCheck": true, // Skip type checking of declaration files
	},
	"include": ["src/**/*", "env.d.ts"],
	"exclude": ["node_modules"]
}
